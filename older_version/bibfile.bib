@article{
吴昉张页-198,
   Author = {吴昉 and 张页},
   Title = {聆听字体之声——由阿拉伯字体艺术浅议字体设计课程教学改良},
   Journal = {艺术教育},
   Number = {2},
   Pages = {18-19},
   Abstract = {在字体设计课程中重点引入中东地区阿拉伯字体设计独具特色的创造理念，有意将字体设计与地域文化相连接，介绍不同文化环境因素对字体设计流变的决定性作用。通过对中东字体作为拼音文字所特有的线性构成方式的认识，以及对阿拉伯文字形的探究分析，分别从字体设计的构成关系与字体设计结合图形设计两方面，思考字体设计课程中对汉字设计的教学改良，从而引导学生积极主动地面对汉字创意，了解汉字的特性与局限，寻找更广阔的汉字设计空间。},
   Keywords = {字体设计; 课程教学; 阿拉伯文; 改良; 汉字设计; 艺术; 中东地区; 地域文化},
   Year = {2010} }




